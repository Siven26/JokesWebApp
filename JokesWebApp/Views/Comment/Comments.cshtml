@using System.Security.Claims
@model List<CommentViewModel>

<!DOCTYPE html>
<html>
<head>
    <title>Comments</title>
</head>
<body>
    <h1>Comments</h1>

    @foreach (var comment in Model)
    {
        <div class="comment">
            <h3>Posted by: @comment.CreatorEmail.Split('@')[0]</h3>
            <p>@comment.CommentText</p>
            @if (User.Identity.IsAuthenticated && User.FindFirstValue(ClaimTypes.Email) == comment.CreatorEmail)
            {
                <a asp-controller="Comment" asp-action="Update" asp-route-id="@comment.CommentID" class="btn btn-primary mx-1">Update Comment</a>
                <a asp-controller="Comment" asp-action="DeleteComment" asp-route-id="@comment.CommentID" class="btn btn-danger mx-1">Delete Comment</a>
            }
        </div>
    }

    <a asp-controller="Joke" asp-action="Jokes">Back</a>
</body>
</html>



