@using System.Security.Claims
@model List<ComedianViewModel>

<!DOCTYPE html>
<html>
<head>

</head>
<body>
    <div class="comedian-list">
        @foreach (var comedian in Model)
        {
                <div class="comedian">
                    <h2 class="comedian-title">@comedian.ComedianName</h2>
                    <img src="https://localhost:7058/images/comedian/@comedian.ComedianImage" alt="comedian picture" />
                    <p class="comedian-description">@comedian.ComedianDescription</p>

                        <a asp-controller="Comedian" asp-action="Update" asp-route-id="@comedian.ComedianID" class="btn btn-primary mx-1">Update Comedian</a>
                        <a asp-controller="Comedian" asp-action="DeleteComedian" asp-route-id="@comedian.ComedianID" class="btn btn-danger mx-1">Delete Comedian</a>
                </div>
        }
    </div>
</body>
</html>






