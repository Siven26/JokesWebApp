@model RatingViewModel

<DOCTYPE html>
    <html>
    <head>
        <style>
            body {
                font-family: Arial, sans-serif;
                background: linear-gradient(180deg, rgba(45,0,105,1) 0%, rgba(0,0,0,1) 100%);
                color: #ffffff;
            }

            label {
                font-size: 40px;
                color: #ffffff;
                margin-top: 10px;
            }

            .form-field {
                display: inline-block;
                width: auto;
                padding: 1em;
                margin: 0 1em 1em 0;
                box-sizing: border-box;
                border: 3px solid #ccc;
                transition: 0.5s;
                outline: none;
                border-radius: 5px;
                font-size: 20px;
            }

            .radio-label {
                font-size: 20px;
                color: #ffffff;
                margin-right: 10px;
            }

                .form-field:focus {
                    border: 3px solid #555;
                }


            .btn {
                display: inline-block;
                padding: 0.5em 1em;
                text-decoration: none;
                font-size: 1.2em;
                background-color: #f1c40f;
                color: #282a36;
                border-radius: 3px;
                transition: background-color 0.3s ease;
                margin: 1em 0;
                text-align: center;
            }

                .btn:hover {
                    background-color: #ba980d;
                    color: #ffffff;
                }
        </style>
    </head>
    <body>
            <form method="post" asp-action="AddRating">
                <input type="hidden" asp-for="JokeID" value="@Model.JokeID" />
                <div class="form-container">
                    <label for="ratingValue">Rating:</label><br />
                    <label class="radio-label">1</label><input type="radio" id="ratingValue1" name="ratingValue" value="1" class="form-field" required />
                    <label class="radio-label">2</label><input type="radio" id="ratingValue2" name="ratingValue" value="2" class="form-field" required />
                    <label class="radio-label">3</label><input type="radio" id="ratingValue3" name="ratingValue" value="3" class="form-field" required />
                    <label class="radio-label">4</label><input type="radio" id="ratingValue4" name="ratingValue" value="4" class="form-field" required />
                    <label class="radio-label">5</label><input type="radio" id="ratingValue5" name="ratingValue" value="5" class="form-field" required />
                </div>
                <input type="submit" class="btn" value="Add" />
                <a asp-controller="Joke" asp-action="Details" asp-route-id="@Model.JokeID" class="btn">Back</a>
            </form>
    </body>
</html>
</DOCTYPE>
