@using System.Security.Claims
@model List<RatingViewModel>

<!DOCTYPE html>
<html>
<head>
    <title>Ratings</title>
</head>
<body>
    <h1>Ratings</h1>

    @foreach (var rating in Model)
    {
        <div class="rating">
            <h3>Posted by: @rating.CreatorEmail.Split('@')[0]</h3>
            <p>@rating.RatingValue/5</p>
        </div>
    }

    <a asp-controller="Joke" asp-action="Jokes">Back</a>
</body>
</html>
