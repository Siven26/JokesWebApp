@model ComedianViewModel

@{
    ViewData["Title"] = $"Update - {Model.ComedianName}";
}
<DOCTYPE html>
    <html>
        <head>
            <style>
            body {
                font-family: Arial, sans-serif;
                background: linear-gradient(180deg, rgba(45,0,105,1) 0%, rgba(0,0,0,1) 100%);
                color: #ffffff;
            }

            label {
                font-size: 25px;
                color: #ffffff;
                margin-top: 10px;
            }

            .form-field {
                width: 100%;
                padding: 12px 20px;
                margin: 5px 0;
                box-sizing: border-box;
                border: 3px solid #ccc;
                transition: 0.5s;
                outline: none;
                border-radius: 5px;
                font-size: 20px;
            }

                .form-field:focus {
                    border: 3px solid #555;
                }

            .image-form-field {
                width: 100%;
                padding: 12px 20px;
                margin: 5px 0;
                box-sizing: border-box;
                transition: 0.5s;
                outline: none;
                border-radius: 5px;
                font-size: 20px;
            }

            .btn {
                display: inline-block;
                padding: 0.5em 1em;
                text-decoration: none;
                font-size: 1.2em;
                background-color: #f1c40f;
                color: #282a36;
                border-radius: 3px;
                transition: background-color 0.3s ease;
                margin: 1em 0;
                text-align: center;
            }

                .btn:hover {
                    background-color: #ba980d;
                    color: #ffffff;
                }
            </style>
        </head>
        <body>
            <h1 class="heading">Update: <b>@Model.ComedianName</b></h1>
            <form asp-action="UpdateComedian" method="post" enctype="multipart/form-data">
            <div class="form-container">
            <input type="hidden" asp-for="ComedianID" />
            <input type="hidden" asp-for="ComedianImage" />

            <label asp-for="ComedianName">Comedian Name:</label>
            <input asp-for="ComedianName" class="form-field" />
            <span asp-validation-for="ComedianName"></span>

            <label asp-for="ComedianImage">Comedian Image:</label>
            <input type="file" name="file" asp-for="ComedianImage" class="image-form-field" />
            <span asp-validation-for="ComedianImage"></span>

            <label asp-for="ComedianDescription">Comedian Description:</label>
            <textarea asp-for="ComedianDescription" rows="5" class="form-field"></textarea>
            <span asp-validation-for="ComedianDescription"></span>

            <input type="submit" value="Save" class="btn" />
            <a asp-controller="Comedian" asp-action="Comedians" class="btn">Back</a>
            </div>
            </form>
        </body>
    </html>
</DOCTYPE>
