@model CommentViewModel

<DOCTYPE html>
    <html>
    <head>
        <style>
            body {
                font-family: Arial, sans-serif;
                background: linear-gradient(90deg, rgba(0,0,0,1) 0%, rgba(35,0,82,1) 20%, rgba(35,0,82,1) 80%, rgba(0,0,0,1) 100%);
                color: #ffffff;
            }

            .heading {
                text-align: center;
            }

            .btn {
                display: inline-block;
                width: 15%;
                padding: 0.2em 0.5em;
                text-decoration: none;
                font-size: 1em;
                background-color: #f1c40f;
                color: #282a36;
                border-radius: 3px;
                transition: background-color 0.3s ease;
                margin: 0.5em 2%;
                text-align: center;
            }

                .btn:hover {
                    background-color: #ba980d;
                    color: #ffffff;
                }

            .comment {
                margin-bottom: 2em;
            }

            .comment-heading {
                font-size: 2.0em;
                color: #ffffff;
            }

            .comment-text, .comment-date, .comment-creator {
                font-size: 1.8em;
            }
        </style>
    </head>
    <body>
        <form method="post" asp-action="DeleteCommentConfirmed" asp-route-id="@Model.CommentID">
            <h1 class="heading">Are you sure you want to delete this comment?</h1>
                <div class="comment">
                    <p class="comment-creator">Posted by: @Model.CreatorEmail.Split('@')[0]</p>
                    <p class="comment-date">Date added: @Model.CommentDateAdded.ToShortDateString()</p>
                    <p class="comment-text">Comment: @Model.CommentText</p>
                    <div class="comment-links">
                        <button type="submit" class="btn btn-danger">Yes</button>
                        <a asp-controller="Comment" asp-action="Comments" asp-route-id="@Model.JokeID" class="btn">No</a>
                    </div>
                </div>
        </form>
    </body>
</html>





