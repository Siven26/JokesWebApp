@model ShowmanViewModel

<DOCTYPE html>
    <html>
    <head>
        <style>
            body {
                font-family: Arial, sans-serif;
                background: linear-gradient(90deg, rgba(0,0,0,1) 0%, rgba(35,0,82,1) 20%, rgba(35,0,82,1) 80%, rgba(0,0,0,1) 100%);
                color: #ffffff;
            }

            .heading {
                text-align: center;
            }

            .showman-list {
                display: flex;
                flex-wrap: wrap;
                justify-content: space-around;
            }

            .showman {
                display: flex;
                flex-direction: column;
                align-items: center;
                margin: 1em;
                border-radius: 10px;
                box-shadow: 0 2px 4px rgba(255, 255, 255, 0.8);
                padding: 1em;
            }

            .showman-title {
                font-size: 2.5em;
            }

            .showman-content {
                display: flex;
                align-items: center;
            }

            img {
                width: 200px;
                height: 200px;
                object-fit: cover;
                margin: 1em 0;
            }

            .showman-description {
                flex: 1;
                margin-left: 1em;
                font-size: 1.8em;
            }

            .btn {
                display: block;
                width: 100%;
                padding: 0.2em 0.5em;
                text-decoration: none;
                font-size: 1em;
                background-color: #f1c40f;
                color: #282a36;
                border-radius: 3px;
                transition: background-color 0.3s ease;
                margin-top: 1em;
                text-align: center;
            }

                .btn:hover {
                    background-color: #ba980d;
                    color: #ffffff;
                }

            .buttons {
                display: flex;
                gap: 1em;
            }
        </style>
    </head>
    <body>
        <div class="showman-list">
        <form method="post" asp-action="DeleteShowmanConfirmed" asp-route-id="@Model.ShowmanID">
            <input type="hidden" name="showmanId" value="@Model.ShowmanID" />
            <h1 class="heading">Are you sure you want to delete this showman?</h1>
                <div class="showman">
                    <h2 class="showman-title">@Model.ShowmanName</h2>
                    <img src="https://localhost:7058/images/showman/@Model.ShowmanImage" alt="showman picture" />
                    <p class="showman-description">@Model.ShowmanDescription</p>
                    <div class="buttons">
                        <button type="submit" class="btn btn-danger">Yes</button>
                        <a asp-controller="Showman" asp-action="Showmans" class="btn btn-primary">No</a>
                    </div>
                </div>
        </form>
        </div>
    </body>
</html>





